---
import { services } from "../../data/services";
---

<section class="border-white/20  border-b">
  <div class="mx-auto border-white/20  border-x max-w-7xl">
    <div class="p-8">
      <p class="text-white font-display uppercase text-3xl lg:text-6xl">
        nuestros servicios
      </p>
    </div>
    <div class="text-white text-xs gap-3 gap-y-12 grid grid-cols-1 md:grid-cols-4 mx-auto p-8 sm:grid-cols-2 md:gap-y-0">
      {services.map((service) => (
        <div>
          <div class="flex items-center gap-2">
            <a 
              href={`/servicios/${service.slug}`}
              target="_blank"
              class="text-white font-display text-xl hover:text-eagle transition-colors duration-300 hover:underline-offset-4 hover:underline group"
            >
              {service.title}
            </a>
            <svg 
              class="w-4 h-4 text-eagle opacity-0 group-hover:opacity-100 transition-opacity duration-300" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
              />
            </svg>
          </div>
          <p class="mt-3 text-eagle">{service.shortDescription}</p>
        </div>
      ))}
    </div>
  </div>
</section>
