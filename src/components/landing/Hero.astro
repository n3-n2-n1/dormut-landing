---
import Banner from "@/components/landing/Banner.astro";

const bannerTexts = [
  "Servicio CNC",
  "Soldadura Personalizada",
  "Fabricación de Metal",
  "Corte por Plasma",
  "Diseño Industrial"
];
---

<section class="border-white/20 border-b relative">
  <!-- Video Background -->
  <div class="absolute inset-0 w-full h-full overflow-hidden">
    <video 
      autoplay 
      loop 
      muted 
      playsinline
      class="w-full h-full object-cover opacity-20"
    >
      <source src="/video.mp4" type="video/mp4">
    </video>
  </div>
  
  <!-- Content -->
  <div class="relative mx-auto border-white/20 border-x max-w-7xl">
    <div class="mx-auto">
      <div class="mx-auto lg:pt-28 gradient-grid px-8 py-12">
        <h1 class="text-white font-display uppercase text-3xl lg:text-7xl">
          Soldaduras y Fabricación CNC Personalizada
        </h1>
      </div>
      <Banner texts={bannerTexts} />
    </div>
  </div>
</section>
