---
interface Props {
  texts: string[];
}

const { texts } = Astro.props;
---

<section class="border-white/20 border-y bg-black/40 backdrop-blur-sm">
  <div class="text-white mx-auto">
    <div class="mx-auto overflow-hidden overflow-x-hidden py-2 relative">
      <div class="w-full justify-between grid">
        <div
          class="absolute from-black/80 inset-0 left-0 via-transparent w-44 z-10 bg-gradient-to-r">
        </div>
        <div
          class="absolute from-black/80 inset-0 left-0 via-transparent w-44 z-10 bg-gradient-to-l ml-auto">
        </div>
      </div>
      <div
        class="flex items-center animate-marquee font-black font-display gap-4 relative tracking-widest uppercase whitespace-nowrap">
        {Array(10).fill(texts).flat().map((item, index) => (
          <>
            {item}
            {index < 9 && <span class="hidden lg:inline">âœº</span>}
          </>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-marquee {
    animation: marquee 20s linear infinite;
  }
</style>
